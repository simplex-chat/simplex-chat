{
    "include": ["src"],
    "compilerOptions": {
      "declaration": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["ES2018", "DOM"],
      "module": "CommonJS",
      "moduleResolution": "Node",
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noEmitOnError": true,
      "outDir": "dist",
      "sourceMap": true,
      "strict": true,
      "strictNullChecks": true,
      "target": "ES2018"
    }
  }
